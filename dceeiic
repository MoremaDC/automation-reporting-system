    <script>
        // Data structures
        const units = [
            "Community Engagement",
            "UCfERI", 
            "Economic Activation Office",
            "Commercialistion TTO"
        ];
        
        const months = [
            "January", "February", "March", "April", "May", "June",
            "July", "August", "September", "October", "November", "December"
        ];
        
        const quarters = ["Quarter 1", "Quarter 2", "Quarter 3", "Quarter 4"];
        
        const projects = {
            "Community Engagement": [
                "Workshop",
                "Outreach",
                "Partnership",
                "Student Project"
            ],
            "Economic Activation Office": [
                "Student Led Programs",
                "Entrepreneurship Ecosystem Development and Management",
                "Events", 
                "Entrepreneurial Capacity Building and Training",
                "Stakeholder Engagement and Sustainability",
                "Entrepreneurial Research and Inclusive Innovation",
                "Student Entrepreneurship Community and Advisory"
            ]
        };
        
        const subProjects = {
            "Workshop": [
                "Entrepreneurship Skills Workshop Series",
                "Community Health & Wellness Workshops",
                "Environmental Sustainability Workshops"
            ],
            "Outreach": [
                "High School Empowerment Outreach",
                "Rural Community Technology Outreach",
                "Agriculture & Food Security Outreach"
            ],
            "Partnership": [
                "NGO Collaboration Program",
                "Industry & Business Partnerships",
                "Government & Municipality Engagement"
            ],
            "Student Project": [
                "Service-Learning Community Projects",
                "Innovation Challenge Projects",
                "Campus Volunteer Program"
            ],
            "Student Led Programs": [
                "SWEEP", "Sustainable Beekeeping", "Entrepreneurship Student Ambassadors Program (ESAP)",
                "Skills for the Future Program (SFFP)", "Biodiversity and IKSAP", "Millenium Fellowship",
                "Stop the spot youth Organization", "Map The System", "USSAVI", "Enactus"
            ],
            "Entrepreneurship Ecosystem Development and Management": [
                "Annual UNIVEN Entrepreneurship & Innovation Festival",
                "Entrepreneurship Day"
            ],
            "Events": [
                "UNIVEN Entrepreneurship Portal & Digital Hub",
                "Accelerator Programme"
            ],
            "Entrepreneurial Capacity Building and Training": [
                "Student Entrepreneurship Training Bootcamp Series",
                "Entrepreneurship Educators Capacity Programme (EECAP)",
                "Digital Entrepreneurship Skills Programme (DESP)",
                "Certified Entrepreneurship Curriculum Integration Project", 
                "Sustainability & Green Business Training Workshops"
            ],
            "Stakeholder Engagement and Sustainability": [
                "UNIVEN Industry Partnership Forum",
                "International Entrepreneurship Exchange Programme",
                "Community and Municipal Entrepreneurship Partnership (CMEP)",
                "Funding & Partnership Development Drive"
            ],
            "Entrepreneurial Research and Inclusive Innovation": [
                "UNIVEN Innovation Challenge",
                "Entrepreneurial Data & Research Hub"
            ],
            "Student Entrepreneurship Community and Advisory": [
                "UNIVEN Entrepreneurship Advisory Clinic (UEAC)",
                "Student Entrepreneurship Leadership Council (SELC)",
                "Community Entrepreneurship Roadshow (CER)",
                "Secondary Schools Entrepreneurship Pipeline Programme",
                "Women and Youth Enterprise Empowerment Project (WYEEP)"
            ]
        };

        // Application state
        let reports = JSON.parse(localStorage.getItem('automationReports')) || [];
        let currentGeneratedReports = {
            unitReports: [],
            directorateReport: null
        };
        
        // DOM Elements
        const currentDateEl = document.getElementById('current-date');
        const tabs = document.querySelectorAll('.tab');
        const tabContents = document.querySelectorAll('.tab-content');
        const reportingMonthSelect = document.getElementById('reporting-month');
        const reportingQuarterSelect = document.getElementById('reporting-quarter');
        const unitSelect = document.getElementById('unit');
        const projectSelect = document.getElementById('project');
        const subProjectSelect = document.getElementById('sub-project');
        const reportForm = document.getElementById('report-form');
        const clearFormBtn = document.getElementById('clear-form');
        const refreshReportsBtn = document.getElementById('refresh-reports');
        const clearAllReportsBtn = document.getElementById('clear-all-reports');
        const reportsBody = document.getElementById('reports-body');
        const noReportsMessage = document.getElementById('no-reports-message');
        const reportTypeSelect = document.getElementById('report-type');
        const unitSelectionDiv = document.getElementById('unit-selection');
        const selectedUnitSelect = document.getElementById('selected-unit');
        const periodSelectionDiv = document.getElementById('period-selection');
        const selectedPeriodSelect = document.getElementById('selected-period');
        const generateReportBtn = document.getElementById('generate-report');
        const reportPreview = document.getElementById('report-preview');
        const unitReportsContainer = document.getElementById('unit-reports-container');
        const directorateReportContainer = document.getElementById('directorate-report-container');
        const alertContainer = document.getElementById('alert-container');

        // Initialize the application
        function init() {
            // Set current date
            currentDateEl.textContent = new Date().toLocaleDateString('en-US', { 
                weekday: 'long', 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
            });
            
            // Set current month and quarter as default
            const currentMonth = new Date().toLocaleString('en-US', { month: 'long' });
            reportingMonthSelect.value = currentMonth;
            
            const currentMonthNum = new Date().getMonth();
            const currentQuarter = Math.floor(currentMonthNum / 3) + 1;
            reportingQuarterSelect.value = `Quarter ${currentQuarter}`;
            
            // Set up event listeners
            setupEventListeners();
            
            // Load reports table
            loadReportsTable();
            
            // Initialize report type selection
            handleReportTypeChange();
        }
        
        // Set up all event listeners
        function setupEventListeners() {
            // Tab navigation
            tabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    const tabId = tab.getAttribute('data-tab');
                    activateTab(tabId);
                });
            });
            
            // Unit selection change
            unitSelect.addEventListener('change', handleUnitChange);
            
            // Project selection change
            projectSelect.addEventListener('change', handleProjectChange);
            
            // Form submission
            reportForm.addEventListener('submit', handleFormSubmit);
            
            // Clear form button
            clearFormBtn.addEventListener('click', clearForm);
            
            // Refresh reports button
            refreshReportsBtn.addEventListener('click', loadReportsTable);
            
            // Clear all reports button
            clearAllReportsBtn.addEventListener('click', clearAllReports);
            
            // Report type change
            reportTypeSelect.addEventListener('change', handleReportTypeChange);
            
            // Generate report button
            generateReportBtn.addEventListener('click', generateSelectedReport);
        }
        
        // Handle report type selection change
        function handleReportTypeChange() {
            const reportType = reportTypeSelect.value;
            
            // Show/hide unit selection based on report type
            if (reportType.includes('unit')) {
                unitSelectionDiv.style.display = 'block';
            } else {
                unitSelectionDiv.style.display = 'none';
            }
            
            // Update period options based on report type
            selectedPeriodSelect.innerHTML = '';
            
            if (reportType.includes('monthly')) {
                months.forEach(month => {
                    const option = document.createElement('option');
                    option.value = month;
                    option.textContent = month;
                    selectedPeriodSelect.appendChild(option);
                });
                
                // Set current month as default
                const currentMonth = new Date().toLocaleString('en-US', { month: 'long' });
                selectedPeriodSelect.value = currentMonth;
            } else {
                quarters.forEach(quarter => {
                    const option = document.createElement('option');
                    option.value = quarter;
                    option.textContent = quarter;
                    selectedPeriodSelect.appendChild(option);
                });
                
                // Set current quarter as default
                const currentMonthNum = new Date().getMonth();
                const currentQuarter = Math.floor(currentMonthNum / 3) + 1;
                selectedPeriodSelect.value = `Quarter ${currentQuarter}`;
            }
        }
        
        // Generate the selected report
        function generateSelectedReport() {
            const reportType = reportTypeSelect.value;
            const period = selectedPeriodSelect.value;
            
            if (reportType.includes('unit')) {
                const unit = selectedUnitSelect.value;
                generateUnitReport(unit, period, reportType.includes('monthly') ? 'monthly' : 'quarterly');
            } else {
                generateDirectorateReport(period, reportType.includes('monthly') ? 'monthly' : 'quarterly');
            }
        }
        
        // Activate a specific tab
        function activateTab(tabId) {
            // Update tab buttons
            tabs.forEach(tab => {
                if (tab.getAttribute('data-tab') === tabId) {
                    tab.classList.add('active');
                } else {
                    tab.classList.remove('active');
                }
            });
            
            // Update tab content
            tabContents.forEach(content => {
                if (content.id === tabId) {
                    content.classList.add('active');
                } else {
                    content.classList.remove('active');
                }
            });
            
            // Special actions for specific tabs
            if (tabId === 'view-reports') {
                loadReportsTable();
            }
        }
        
        // Handle unit selection change
        function handleUnitChange() {
            const selectedUnit = unitSelect.value;
            
            // Clear project and sub-project
            projectSelect.innerHTML = '<option value="">-- Select Project --</option>';
            subProjectSelect.innerHTML = '<option value="">-- Select Sub-Project --</option>';
            
            // Populate projects based on unit
            if (selectedUnit && projects[selectedUnit]) {
                projects[selectedUnit].forEach(project => {
                    const option = document.createElement('option');
                    option.value = project;
                    option.textContent = project;
                    projectSelect.appendChild(option);
                });
            }
        }
        
        // Handle project selection change
        function handleProjectChange() {
            const selectedProject = projectSelect.value;
            
            // Clear sub-project
            subProjectSelect.innerHTML = '<option value="">-- Select Sub-Project --</option>';
            
            // Populate sub-projects based on project
            if (selectedProject && subProjects[selectedProject]) {
                subProjects[selectedProject].forEach(subProject => {
                    const option = document.createElement('option');
                    option.value = subProject;
                    option.textContent = subProject;
                    subProjectSelect.appendChild(option);
                });
            }
        }
        
        // Handle form submission
        function handleFormSubmit(e) {
            e.preventDefault();
            
            // Get form values
            const reportingMonth = reportingMonthSelect.value;
            const reportingQuarter = reportingQuarterSelect.value;
            const unit = unitSelect.value;
            const project = projectSelect.value;
            const subProject = subProjectSelect.value;
            const activity = document.getElementById('activity').value;
            const participants = document.getElementById('participants').value;
            const cost = document.getElementById('cost').value;
            const impact = document.getElementById('impact').value;
            
            // Validate form
            if (!reportingMonth || !reportingQuarter || !unit || !project || !subProject || !activity || !impact) {
                showAlert('Please fill in all required fields.', 'error');
                return;
            }
            
            // Create report object
            const report = {
                id: Date.now(), // Simple ID generation
                timestamp: new Date().toISOString(),
                reportingMonth,
                reportingQuarter,
                unit,
                project,
                subProject,
                activity,
                participants: participants || 'Not specified',
                cost: cost ? `ZAR ${parseFloat(cost).toLocaleString('en-ZA', {minimumFractionDigits: 2})}` : 'Not specified',
                impact
            };
            
            // Add to reports array
            reports.push(report);
            
            // Save to localStorage
            localStorage.setItem('automationReports', JSON.stringify(reports));
            
            // Show success message
            showAlert('Report saved successfully!', 'success');
            
            // Clear form
            clearForm();
            
            // If on view reports tab, refresh the table
            if (document.getElementById('view-reports').classList.contains('active')) {
                loadReportsTable();
            }
        }
        
        // Clear the form
        function clearForm() {
            reportForm.reset();
            projectSelect.innerHTML = '<option value="">-- Select Project --</option>';
            subProjectSelect.innerHTML = '<option value="">-- Select Sub-Project --</option>';
            
            // Reset to current month and quarter
            const currentMonth = new Date().toLocaleString('en-US', { month: 'long' });
            reportingMonthSelect.value = currentMonth;
            
            const currentMonthNum = new Date().getMonth();
            const currentQuarter = Math.floor(currentMonthNum / 3) + 1;
            reportingQuarterSelect.value = `Quarter ${currentQuarter}`;
        }
        
        // Load reports into the table
        function loadReportsTable() {
            reportsBody.innerHTML = '';
            
            if (reports.length === 0) {
                noReportsMessage.classList.remove('hidden');
                return;
            }
            
            noReportsMessage.classList.add('hidden');
            
            // Sort reports by date (newest first)
            const sortedReports = [...reports].sort((a, b) => new Date(b.timestamp) - new Date(a.timestamp));
            
            // Populate table
            sortedReports.forEach(report => {
                const row = document.createElement('tr');
                const date = new Date(report.timestamp).toLocaleDateString();
                
                row.innerHTML = `
                    <td>${date}</td>
                    <td>${report.reportingMonth}</td>
                    <td>${report.reportingQuarter}</td>
                    <td>${report.unit}</td>
                    <td>${report.project}</td>
                    <td>${report.subProject}</td>
                    <td>${report.activity.substring(0, 50)}${report.activity.length > 50 ? '...' : ''}</td>
                    <td>${report.participants}</td>
                    <td>${report.cost}</td>
                    <td class="no-print">
                        <button class="btn btn-warning view-report" data-id="${report.id}">View</button>
                        <button class="btn btn-danger delete-report" data-id="${report.id}">Delete</button>
                    </td>
                `;
                
                reportsBody.appendChild(row);
            });
            
            // Add event listeners to view and delete buttons
            document.querySelectorAll('.view-report').forEach(btn => {
                btn.addEventListener('click', () => viewReport(btn.getAttribute('data-id')));
            });
            
            document.querySelectorAll('.delete-report').forEach(btn => {
                btn.addEventListener('click', () => deleteReport(btn.getAttribute('data-id')));
            });
        }
        
        // View a specific report
        function viewReport(id) {
            const report = reports.find(r => r.id == id);
            if (!report) return;
            
            const date = new Date(report.timestamp).toLocaleDateString();
            
            alert(`
                Report Details:
                
                Date: ${date}
                Reporting Month: ${report.reportingMonth}
                Reporting Quarter: ${report.reportingQuarter}
                Unit: ${report.unit}
                Project: ${report.project}
                Sub-Project: ${report.subProject}
                Activity: ${report.activity}
                Participants: ${report.participants}
                Cost: ${report.cost}
                Impact/Output: ${report.impact}
            `);
        }
        
        // Delete a specific report
        function deleteReport(id) {
            if (!confirm('Are you sure you want to delete this report?')) return;
            
            reports = reports.filter(r => r.id != id);
            localStorage.setItem('automationReports', JSON.stringify(reports));
            loadReportsTable();
            showAlert('Report deleted successfully!', 'success');
        }
        
        // Clear all reports
        function clearAllReports() {
            if (!confirm('Are you sure you want to delete ALL reports? This action cannot be undone.')) return;
            
            reports = [];
            localStorage.setItem('automationReports', JSON.stringify(reports));
            loadReportsTable();
            showAlert('All reports have been deleted!', 'success');
        }
        
        // Generate unit report
        function generateUnitReport(unit, period, periodType) {
            // Filter reports for the selected unit and period
            let unitReports = reports.filter(report => report.unit === unit);
            
            if (periodType === 'monthly') {
                unitReports = unitReports.filter(report => report.reportingMonth === period);
            } else {
                unitReports = unitReports.filter(report => report.reportingQuarter === period);
            }
            
            if (unitReports.length === 0) {
                showAlert(`No reports found for ${unit} in ${period}.`, 'error');
                return;
            }
            
            const reportHTML = generateUnitReportHTML(unit, unitReports, period, periodType);
            
            // Add to generated reports
            const reportId = `unit-${unit.replace(/\s+/g, '-')}-${period.replace(/\s+/g, '-')}-${Date.now()}`;
            currentGeneratedReports.unitReports.push({
                id: reportId,
                unit: unit,
                period: period,
                periodType: periodType,
                html: reportHTML
            });
            
            // Display in generated reports tab
            displayGeneratedReports();
            
            // Switch to generated reports tab
            activateTab('generated-reports');
            
            showAlert(`${periodType === 'monthly' ? 'Monthly' : 'Quarterly'} report for ${unit} generated successfully!`, 'success');
        }
        
        // Generate directorate report
        function generateDirectorateReport(period, periodType) {
            // Filter reports for the selected period
            let directorateReports = [...reports];
            
            if (periodType === 'monthly') {
                directorateReports = directorateReports.filter(report => report.reportingMonth === period);
            } else {
                directorateReports = directorateReports.filter(report => report.reportingQuarter === period);
            }
            
            if (directorateReports.length === 0) {
                showAlert(`No reports found for the directorate in ${period}.`, 'error');
                return;
            }
            
            const reportHTML = generateDirectorateReportHTML(directorateReports, period, periodType);
            
            // Add to generated reports
            const reportId = `directorate-${period.replace(/\s+/g, '-')}-${Date.now()}`;
            currentGeneratedReports.directorateReport = {
                id: reportId,
                period: period,
                periodType: periodType,
                html: reportHTML
            };
            
            // Display in generated reports tab
            displayGeneratedReports();
            
            // Switch to generated reports tab
            activateTab('generated-reports');
            
            showAlert(`${periodType === 'monthly' ? 'Monthly' : 'Quarterly'} directorate report generated successfully!`, 'success');
        }
        
        // Display all generated reports
        function displayGeneratedReports() {
            unitReportsContainer.innerHTML = '';
            directorateReportContainer.innerHTML = '';
            
            // Display unit reports
            if (currentGeneratedReports.unitReports.length > 0) {
                currentGeneratedReports.unitReports.forEach(report => {
                    const reportElement = document.createElement('div');
                    reportElement.className = 'report-section';
                    reportElement.innerHTML = report.html;
                    
                    // Add export button
                    const exportButton = document.createElement('button');
                    exportButton.className = 'btn btn-success no-print';
                    exportButton.textContent = 'Export to Word';
                    exportButton.onclick = () => exportToWord(report.html, `${report.unit}-${report.period}-Report`);
                    
                    reportElement.appendChild(exportButton);
                    unitReportsContainer.appendChild(reportElement);
                });
            }
            
            // Display directorate report
            if (currentGeneratedReports.directorateReport) {
                const report = currentGeneratedReports.directorateReport;
                const reportElement = document.createElement('div');
                reportElement.className = 'report-section';
                reportElement.innerHTML = report.html;
                
                // Add export button
                const exportButton = document.createElement('button');
                exportButton.className = 'btn btn-success no-print';
                exportButton.textContent = 'Export to Word';
                exportButton.onclick = () => exportToWord(report.html, `Directorate-${report.period}-Report`);
                
                reportElement.appendChild(exportButton);
                directorateReportContainer.appendChild(reportElement);
            }
        }
        
        // Generate HTML for a unit report
        function generateUnitReportHTML(unit, unitReports, period, periodType) {
            const totalActivities = unitReports.length;
            const totalParticipants = unitReports.reduce((sum, report) => {
                return sum + (report.participants !== 'Not specified' ? parseInt(report.participants) : 0);
            }, 0);
            
            const totalCost = unitReports.reduce((sum, report) => {
                if (report.cost !== 'Not specified') {
                    const costValue = parseFloat(report.cost.replace('ZAR ', '').replace(/,/g, ''));
                    return sum + (isNaN(costValue) ? 0 : costValue);
                }
                return sum;
            }, 0);
            
            // Group by project
            const projectsData = {};
            unitReports.forEach(report => {
                const project = report.project || 'General Activities';
                if (!projectsData[project]) {
                    projectsData[project] = [];
                }
                projectsData[project].push(report);
            });
            
            let projectsHTML = '';
            for (const [project, projectReports] of Object.entries(projectsData)) {
                let projectActivitiesHTML = '';
                projectReports.forEach(report => {
                    projectActivitiesHTML += `
                        <div style="margin-bottom: 15px; padding-bottom: 15px; border-bottom: 1px solid #eee;">
                            <h4>${report.subProject || 'Activity'}</h4>
                            <p><strong>Description:</strong> ${report.activity}</p>
                            <p><strong>Participants:</strong> ${report.participants}</p>
                            <p><strong>Cost:</strong> ${report.cost}</p>
                            <p><strong>Impact/Output:</strong> ${report.impact}</p>
                        </div>
                    `;
                });
                
                projectsHTML += `
                    <div style="margin-bottom: 25px;">
                        <h3>${project}</h3>
                        ${projectActivitiesHTML}
                    </div>
                `;
            }
            
            const periodLabel = periodType === 'monthly' ? `Month: ${period}` : `Quarter: ${period}`;
            
            return `
                <h2>${unit} - ${periodType === 'monthly' ? 'Monthly' : 'Quarterly'} Activity Report</h2>
                <p><strong>Reporting Period:</strong> ${periodLabel}</p>
                <div class="stat-card">
                    <h4>Executive Summary</h4>
                    <p>This report summarizes the activities conducted by ${unit} during ${period}. 
                    The unit conducted <strong>${totalActivities}</strong> activities with a total of 
                    <strong>${totalParticipants}</strong> participants at a total cost of 
                    <strong>ZAR ${totalCost.toLocaleString('en-ZA', {minimumFractionDigits: 2})}</strong>. 
                    The activities spanned various projects and sub-projects, demonstrating comprehensive 
                    engagement and impact across different initiatives.</p>
                </div>
                
                <div class="stat-card">
                    <h4>Key Statistics</h4>
                    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px;">
                        <div>
                            <div class="stat-value">${totalActivities}</div>
                            <div>Total Activities</div>
                        </div>
                        <div>
                            <div class="stat-value">${totalParticipants}</div>
                            <div>Total Participants</div>
                        </div>
                        <div>
                            <div class="stat-value">ZAR ${totalCost.toLocaleString('en-ZA', {minimumFractionDigits: 2})}</div>
                            <div>Total Cost</div>
                        </div>
                        <div>
                            <div class="stat-value">${totalActivities > 0 ? Math.round(totalParticipants / totalActivities) : 0}</div>
                            <div>Avg. Participants per Activity</div>
                        </div>
                        <div>
                            <div class="stat-value">${Object.keys(projectsData).length}</div>
                            <div>Projects</div>
                        </div>
                    </div>
                </div>
                
                <h3>Detailed Activities</h3>
                ${projectsHTML}
            `;
        }
        
        // Generate HTML for directorate report
        function generateDirectorateReportHTML(directorateReports, period, periodType) {
            const totalActivities = directorateReports.length;
            const totalParticipants = directorateReports.reduce((sum, report) => {
                return sum + (report.participants !== 'Not specified' ? parseInt(report.participants) : 0);
            }, 0);
            
            const totalCost = directorateReports.reduce((sum, report) => {
                if (report.cost !== 'Not specified') {
                    const costValue = parseFloat(report.cost.replace('ZAR ', '').replace(/,/g, ''));
                    return sum + (isNaN(costValue) ? 0 : costValue);
                }
                return sum;
            }, 0);
            
            // Group by unit
            const unitsData = {};
            directorateReports.forEach(report => {
                if (!unitsData[report.unit]) {
                    unitsData[report.unit] = { activities: 0, participants: 0, cost: 0 };
                }
                unitsData[report.unit].activities += 1;
                if (report.participants !== 'Not specified') {
                    unitsData[report.unit].participants += parseInt(report.participants);
                }
                if (report.cost !== 'Not specified') {
                    const costValue = parseFloat(report.cost.replace('ZAR ', '').replace(/,/g, ''));
                    unitsData[report.unit].cost += isNaN(costValue) ? 0 : costValue;
                }
            });
            
            let unitsTableHTML = '';
            for (const [unit, data] of Object.entries(unitsData)) {
                unitsTableHTML += `
                    <tr>
                        <td>${unit}</td>
                        <td>${data.activities}</td>
                        <td>${data.participants}</td>
                        <td>ZAR ${data.cost.toLocaleString('en-ZA', {minimumFractionDigits: 2})}</td>
                    </tr>
                `;
            }
            
            const periodLabel = periodType === 'monthly' ? `Month: ${period}` : `Quarter: ${period}`;
            
            return `
                <h2>Directorate ${periodType === 'monthly' ? 'Monthly' : 'Quarterly'} Summary Report</h2>
                <p><strong>Reporting Period:</strong> ${periodLabel}</p>
                <div class="stat-card">
                    <h4>Executive Summary</h4>
                    <p>This comprehensive report provides an overview of all activities conducted across the directorate during ${period}. 
                    The directorate successfully conducted <strong>${totalActivities}</strong> activities engaging 
                    <strong>${totalParticipants}</strong> participants at a total cost of 
                    <strong>ZAR ${totalCost.toLocaleString('en-ZA', {minimumFractionDigits: 2})}</strong>. 
                    This demonstrates significant outreach and impact across various initiatives and programs.</p>
                </div>
                
                <h3>Unit-wise Performance Summary</h3>
                <table>
                    <thead>
                        <tr>
                            <th>Unit</th>
                            <th>Number of Activities</th>
                            <th>Total Participants</th>
                            <th>Total Cost</th>
                        </tr>
                    </thead>
                    <tbody>
                        ${unitsTableHTML}
                    </tbody>
                </table>
                
                <h3>Key Achievements and Impacts</h3>
                ${Object.keys(unitsData).map(unit => `
                    <div style="margin-bottom: 20px;">
                        <h4>${unit}</h4>
                        <ul>
                            ${directorateReports
                                .filter(r => r.unit === unit)
                                .slice(0, 3)
                                .map(report => `<li>${report.subProject || 'Activity'}: ${report.impact.substring(0, 100)}...</li>`)
                                .join('')}
                        </ul>
                    </div>
                `).join('')}
                
                <h3>Recommendations and Way Forward</h3>
                <ul>
                    <li>Continue to strengthen cross-unit collaboration for enhanced impact</li>
                    <li>Explore digital platforms for wider participant engagement</li>
                    <li>Develop standardized metrics for impact assessment across all units</li>
                    <li>Enhance stakeholder engagement and partnership development</li>
                    <li>Focus on sustainable and scalable program models</li>
                    <li>Optimize resource allocation based on impact analysis</li>
                </ul>
            `;
        }
        
        // Export HTML content to Word document
        function exportToWord(html, filename) {
            // Create a Blob with the HTML content
            const blob = new Blob([`
                <!DOCTYPE html>
                <html>
                <head>
                    <meta charset="UTF-8">
                    <style>
                        body { font-family: Arial, sans-serif; line-height: 1.6; color: #333; }
                        h1, h2, h3, h4 { color: #2c3e50; }
                        h1 { font-size: 24px; border-bottom: 2px solid #3498db; padding-bottom: 10px; }
                        h2 { font-size: 20px; margin-top: 25px; }
                        h3 { font-size: 18px; margin-top: 20px; }
                        h4 { font-size: 16px; margin-top: 15px; }
                        table { width: 100%; border-collapse: collapse; margin: 15px 0; }
                        th, td { padding: 10px; text-align: left; border-bottom: 1px solid #ddd; }
                        th { background-color: #f2f2f2; font-weight: bold; }
                        .stat-card { background-color: #f9f9f9; padding: 15px; border-radius: 5px; margin: 15px 0; }
                        .stat-value { font-size: 24px; font-weight: bold; color: #3498db; }
                    </style>
                </head>
                <body>
                    ${html}
                </body>
                </html>
            `], { type: 'application/msword' });
            
            // Create a temporary URL for the Blob
            const url = URL.createObjectURL(blob);
            
            // Create a temporary link element to trigger the download
            const a = document.createElement('a');
            a.href = url;
            a.download = `${filename}.doc`;
            document.body.appendChild(a);
            a.click();
            
            // Clean up
            setTimeout(() => {
                document.body.removeChild(a);
                URL.revokeObjectURL(url);
            }, 100);
        }
        
        // Show alert message
        function showAlert(message, type) {
            alertContainer.innerHTML = `
                <div class="alert alert-${type}">
                    ${message}
                </div>
            `;
            
            // Auto-hide after 5 seconds
            setTimeout(() => {
                alertContainer.innerHTML = '';
            }, 5000);
        }
        
        // Initialize the application when DOM is loaded
        document.addEventListener('DOMContentLoaded', init);
    </script>
</body>
</html>
